<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <style>
         {#asset styles.css @encoding=utf8}
    </style>
    
</head>

<body>
    <div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="2">
                    <table>
                        <tr>
                            <td class="logo">
                                {{#if FLAG}}
                                    <img src='{{URL_LOGO}}' style="width:100%; max-width:300px;"/>
                                {{else}}
                                    {{NOMBRE}} 
                                {{/if}}
                                <br>
                                <label>{{DIRECCION}}</label>
                            </td>
                            
                            <td class="info">
                                RUC: {{RUC}}<br>
                                {{DOCUMENTO}}<br>
                                <label style="float: left;margin-left:15px;">{{SERIE}}</label>
                                <label style="float: right;margin-right:15px">{{NUMERO}}</label>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            
            <tr class="information">
                <td colspan="2">
                    <table style="border:2px solid #333; border-radius:6px">
                        <tr>
                            <td>
                                <strong>SEÃ‘OR(ES): </strong> <br>
                                <strong>RUC:  </strong><br> 
                                <strong>DIRECCION: </strong> 
                            </td>
                            <td style="text-align: left;text-align: -webkit-left;">
                                 <strong>{{CLIENTE}}</strong><br>
                                 {{RUC}}<br>
                                 {{DIRECCION_CLIENTE}}
                            </td>
                            
                            <td style="padding-right: 20px;text-align:right">
                                <strong>FECHA EMISION:</strong><br>
                                <strong>{{FECHA_EMISION}}</strong><br>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            
              
            <tr class="information">
                <td colspan="2">
                    <table style="border:2px solid #333; border-radius:6px;line-height: 16px;">
                        <tr>
                            <td>
                                <strong>NRO. COMPROBANTE: </strong> <br>
                                <strong>NRO. GUIA:  </strong><br> 
                                <strong>OBSERVACIONES: </strong> 
                            </td>
                            <td style="text-align: left;text-align: -webkit-left;">
                                 <strong>{{NRO_COMPROBANTE}}</strong><br>
                                 {{NRO_GUIA}}<br>
                                 {{OBSERVACIONES}}
                            </td>
                            
                            <td style="text-align:left">
                                <strong>CREADO POR: </strong>{{CAJERO}}<br>
                                <strong>COND. DE VENTA: </strong>{{CONDICION}}<br>
                                 <strong>PLACA VEHICULAR: </strong>{{PLACA_VEHICULAR}}<br>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
             
        </table>
        
        <table cellpadding="0" cellspacing="0">
           
            <tr class="heading">
                <td>
                    CANT.
                </td>
                <td>
                    UNID.
                </td>
                <td>
                    DESCRIPCION
                </td>
                <td>
                    P. UNIT.
                </td>
                <td>
                    DSCTO.
                </td>
                <td>
                    SUB TOTAL
                </td>
            </tr>
            
            {{#each DETALLES}}
                <tr class="item">
                    <td>
                        {{CANTIDAD}}
                    </td>
                    <td>
                        {{UNIDAD}}
                    </td>
                    <td>
                        {{DESCRIPCION}}
                    </td>
                    <td>
                        {{PRECIO_UNITARIO}}
                    </td>
                    <td>
                        {{DESCUENTO}}
                    </td>
                    <td>
                        {{SUBTOTAL}}
                    </td>
                </tr>
            {{/each}}
            
            <tr class="item">
                <td>
                    {{ESCRITURA_MONTO}}
                </td>
            </tr>
            
             
        </table>
        
         <table cellpadding="0" cellspacing="0">
           
           <tr class="information">
                <td colspan="2">
                    <table> 
                        <tr class="heading">
                            <td>
                                OP. GRAVADAS
                            </td>
                            <td>
                                OP. EXONERADAS
                            </td>
                            <td>
                                OP. GRATUITAS
                            </td>
                            <td>
                                OP. INAFECTAS
                            </td>
                            <td>
                                I.G.V.
                            </td>
                            <td>
                                TOTAL
                            </td>
                        </tr>
                       <tr class="item">
                            <td>
                                {{GRAVADAS}}
                            </td>
                            <td>
                                {{EXONERADAS}}
                            </td>
                            <td>
                                {{GRATUITAS}}
                            </td>
                            <td>
                                {{INAFECTAS}}
                            </td>
                            <td>
                                {{IGV}}
                            </td>
                            <td>
                                {{TOTAL}}
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            
             
        </table>
        
        
    </div>
</body>
</html>