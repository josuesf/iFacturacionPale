<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width-->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7-->
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome-->
    <link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons-->
    <link rel="stylesheet" href="/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style-->
    <link rel="stylesheet" href="/dist/css/AdminLTE.min.css"> 
    <!-- WARNING: Respond.js doesn't work if you view the page via file://-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <title>iFacturacion Pale</title>
</head>

<body class="hold-transition register-page">
    <div class="register-box">
      <div class="register-logo">
        <a href="javascript:void(0);"><b>Pal</b>ERP</a>
      </div>
    
      <div class="register-box-body">
        
        <% if(typeof err != 'undefined' && err!='') { %>
          <div class="callout callout-danger" id="divError" data-value="0"> 
              <p id="textError"><%=err%></p>
          </div> 
        <% } %>

        <% if(typeof success != 'undefined' && success!='') { %>
          <div class="callout callout-success" id="divSuccess" data-value="0"> 
              <p id="textSuccess"><%=success%></p>
          </div> 
        <% } %>
    
        <form action="/empresa_api/register" method="post">
          <div class="form-group has-feedback">
            <input type="text" class="form-control" id="ruc" name="ruc" placeholder="RUC SUNAT de empresa o persona" required>
            <span class="glyphicon glyphicon-stats form-control-feedback"></span>
          </div>

          <div class="form-group has-feedback">
            <input type="text" class="form-control" id="razon" name="razon" placeholder="Razon social" required>
            <span class="glyphicon form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
            <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Direccion" required>
            <span class="glyphicon form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
            <input type="text" class="form-control" id="celular" name="celular" placeholder="Celular" required>
            <span class="glyphicon glyphicon-phone form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
            <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
          </div>
           
          <div class="row">
            <!-- /.col -->
            <div class="col-xs-4 col-xs-offset-4">
              <button type="submit" class="btn btn-primary btn-block btn-flat">Registrar</button>
            </div>
            <!-- /.col -->
          </div>
        </form>
     
        <a href="/login" class="text-center"><i class="fa fa-arrow-circle-left"></i> Ir a iniciar sesi√≥n</a>
      </div>
      <!-- /.form-box -->
    </div>
    <!-- /.register-box -->
    
    <!-- jQuery 3 -->
    <script src="../../bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="../../bower_components/bootstrap/dist/js/bootstrap.min.js"></script> 
    </body>

</html>