</head>

<body>
    <div class="background"></div>
    <div class="backdrop"></div>
    <div class="login-form-container">
        <div class="login-form-content">
            <div class="row">
                <% if(typeof err != 'undefined' && err!='') { %>
                <div class="alert alert-callout alert-danger" id="divError" data-value="0"> 
                    <p id="textError"><%=err%></p>
                </div> 
                <% } %>
        
                <% if(typeof success != 'undefined' && success!='') { %>
                <div class="alert alert-callout alert-success" id="divSuccess" data-value="0"> 
                    <p id="textSuccess"><%=success%></p>
                </div> 
                <% } %>
    
            </div>

            <div class="login-form-header">
                
                    <span class="text-lg text-bold text-default"> CAMBIAR CONTRASEÑA</span>
            </div>
            <br />
            
            <form class="form form-validate" accept-charset="utf-8" action="/empresa_api/cambiar_password" method="post">
                <div class="form-group floating-label">
                    <input type="text" class="form-control dirty" id="ruc" name="ruc" required>
                    <label for="ruc">RUC</label>
                </div>                          
                <div class="form-group floating-label">
                    <input type="email" class="form-control dirty" id="email" name="email" required>
                    <label for="email">Email</label>
                </div>
                
                <br />
                <div class="row">
                    <div class="col-xs-7 text-left">
                        <p class="help-block"><a href="/login">¿Ya tienes una cuenta? Haz click aqui</a></p>
                    </div>
                    <!--end .col -->
                    <div class="col-xs-5 text-right">
                        <button class="btn btn-info btn-raised" type="submit">Aceptar</button>
                    </div>
                    <!--end .col -->
                </div>
                <!--end .row -->
            </form>
            
        </div>
    </div>

    <!-- BEGIN JAVASCRIPT -->
    <script src="/assets/js/libs/jquery/jquery-1.9.1.js"></script>  
    <script src="/assets/js/libs/bootstrap/bootstrap.min.js"></script>
    <script src="/assets/js/core/cache/63d0445130d69b2868a8d28c93309746.js"></script> 
     

    <!-- END JAVASCRIPT -->

</body>

</html>