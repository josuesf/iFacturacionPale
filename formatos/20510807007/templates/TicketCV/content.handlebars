<html><head>
     <style>
         {#asset style-ticket-compra-venta.css @encoding=utf8}
    </style>
</head>
<body> 
    <div class="ticket">    
        <div class="encabezado"> 
            <p class="nombre-empresa">{{NOMBRE}}</p> 
            <p class="direccion-empresa">{{DIRECCION}}</p>
            <p class="ruc-emisor">RUC: {{RUC}}</p>
            <p class="tipo-doc">{{DOCUMENTO}}</p>      
            <p class="correlativo">CV: {{SERIE}}-{{NUMERO}}</p>
            <p class="fecha-emision">FECHA: {{FECHA_EMISION}}</p>
             <p class = "cliente" >
                <span>CLIENTE:  {{NOM_SOLICITANTE}}</span><br>
                <span>CUENTA: {{NUM_CUENTA}}</span><br>
                <span>CONCEPTO: {{CONCEPTO}}</span>
            </p>
            <table class="datos-transferencia">
                <tbody><tr>
                    <th style="border-right:1px dashed black; text-align: center;padding: 0 12px 0 12px;">{{MONEDA_NACIONAL}}</th>
                    <th style="border-right:1px dashed black;text-align: center;padding: 0 12px 0 12px;">TIPO DE CAMBIO</th>
                    <th style="text-align: center;padding: 0 12px 0 12px;">{{MONEDA_EXTRANJERA}}</th>
                    </tr>
                     {{#each DETALLES}}
                     
                        <tr>         
                            <td style="border-right:1px dashed black;text-align: center;">{{NACIONAL}}</td>
                            <td style="border-right:1px dashed black;text-align: center;">{{TC}}</td>
                            <td style="text-align: center;">{{EXTRANJERO}}</td>
                           
                        </tr>    
                    {{/each}}
                    
                </tbody></table>                               
                <span>----------------------------------------------------------------------------</span>
        </div>           
        <table class="pie-pagina">            
            <tbody><tr>
                <td style="padding: 0 0 0 0;">USUARIO: {{USUARIO}}</td>
                <td colspan="2" style="text-align: right;">v.:{{VERSION_SISTEMA}}</td>
            </tr>            
        </tbody></table>
    </div>

 <script>
       
        window.JSREPORT_CHROME_PDF_OPTIONS = {
            width:  '80mm',
            height: '297mm'
        }
    </script>

</body></html>